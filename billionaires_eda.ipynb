print("\n")

# 13. Aggregate Country Level Analysis

# Total Billionaires by Country (Count)
country_counts = df['Country_Region'].value_counts()

# Total Net Worth by Country (Sum of Wealth)
country_total_wealth = df.groupby('Country_Region')['Total_net_worth'].sum()

#  Calculate Global Total Wealth
global_total_wealth = df['Total_net_worth'].sum()

#  Calculate Percentage Share
country_percentage = (country_total_wealth / global_total_wealth) * 100

#  Combine Everything into One DataFrame
country_summary = pd.DataFrame({
    'Total_Billionaires': country_counts,
    'Total_Wealth_Billion_USD': country_total_wealth,
    'Wealth_Percentage_%': country_percentage
})

# Sort by Total Wealth (Descending)
country_summary = country_summary.sort_values(by='Total_Wealth_Billion_USD', ascending=False)

print("\nCountry-Level Summary:\n")
print(country_summary.head(15))
print("\n")

# 14. Bar Chart of Wealth % by Country
plt.figure()
country_summary.head(10)['Wealth_Percentage_%'].plot(kind='bar')
plt.xlabel("Country")
plt.ylabel("Wealth Percentage (%)")
plt.title("Top 10 Countries by Share of Global Billionaire Wealth")
plt.xticks(rotation=45)
plt.show()
print("\n")

