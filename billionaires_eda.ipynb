
# Bloomberg Billionaires Data Analysis

# 1. Import Libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# 2. Upload File from computer
from google.colab import files
uploaded = files.upload()

# 3. Load Dataset (make sure filename matches exactly)
df = pd.read_csv("Bloomberg Billionaires Index-500 (2).csv")

# 4. Clean Column Names and Stripping leading, trailing or whitespaces
df.columns = df.columns.str.strip()

# Renaming columns to clean format to resolve Key Errors
df.columns = df.columns.str.replace("$", "", regex=False) #  $ symbol removal
df.columns = df.columns.str.replace("/", "")
df.columns = df.columns.str.replace(" ", "_")
df.columns = df.columns.str.replace("__", "_")
df.columns = df.columns.str.lstrip("_") # Removing leading underscores
df.columns = df.columns.str.rstrip("_") # Removing trailing underscores

print("Cleaned Columns:\n", df.columns)

# 5. Clean Financial Columns

# Clean Total Net Worth and converting data to int only like no Bn or else
df['Total_net_worth'] = df['Total_net_worth'].str.replace('[^0-9.]', '', regex=True)
df['Total_net_worth'] = pd.to_numeric(df['Total_net_worth'], errors='coerce')

# Clean YTD Change
df['YTD_change'] = df['YTD_change'].str.replace('[^0-9.-]', '', regex=True)
df['YTD_change'] = pd.to_numeric(df['YTD_change'], errors='coerce')

# Clean Last Change
df['Last_change'] = df['Last_change'].str.replace('[^0-9.-]', '', regex=True)
df['Last_change'] = pd.to_numeric(df['Last_change'], errors='coerce')

# Convert Rank
df['Rank'] = pd.to_numeric(df['Rank'], errors='coerce')

# Drop of missing & duplicates values
df = df.dropna()
df = df.drop_duplicates()

print("\nDataset Info:")
print(df.info())

# 6. Basic Statistical Analysis

mean_wealth = df['Total_net_worth'].mean()
median_wealth = df['Total_net_worth'].median()
skew_wealth = df['Total_net_worth'].skew()

print("\nBasic Statistics Results:")
print("Mean Net Worth:", mean_wealth)
print("Median Net Worth:", median_wealth)
print("Skewness:", skew_wealth)

# Logic:
# If mean > median and skew > 0 â†’ right-skewed distribution

# 7. Wealth Distribution Plot 

plt.figure()
plt.hist(df['Total_net_worth'], bins=20)
plt.xlabel("Net Worth (Billions)")
plt.ylabel("Number of Billionaires")
plt.title("Wealth Distribution")
plt.show()

# 8. Mean & Median by Country

country_stats = df.groupby('Country_Region')['Total_net_worth'].agg(['mean','median']).sort_values(by='mean', ascending=False)

print("\nTop 10 Countries by Average(Mean) Net Worth:")
print(country_stats.head(10))

# Plot Top 10 Countries
top_country_plot = country_stats.head(10)

plt.figure()
plt.bar(top_country_plot.index, top_country_plot['mean'])
plt.xticks(rotation=45)
plt.xlabel("Country:")
plt.ylabel("Average Net Worth:")
plt.title("Top 10 Countries by Average Net Worth:")
plt.show()

# 9. Mean and Median Net Worths by Industry

industry_stats = df.groupby('Industry')['Total_net_worth'].agg(['mean','median']).sort_values(by='mean', ascending=False)

print("\nTop 10 Industries by Average Net Worth:")
